    <camera>
        <position x="360" y="200" z="500"/>
    </camera>

    <checkpoints>
        <checkpoint x="0" y="-64"/>
    </checkpoints>


    <layout>
        <solids>
            <rect x="-128" y="0" w="256" h="16">
