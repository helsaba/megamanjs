                </trait>
            </rect>

            <rect x="128" y="400" w="32" h="16">
                <trait source="Oscillating" func="circle" speed="1">
                    <amplitude x="360" y="0"/>
                </trait>
            </rect>



        </solids>
    </layout>
</scene>
